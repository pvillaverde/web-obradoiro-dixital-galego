---
layout: ./base.njk
page_css: docs.css
---

<div class="doc">
   {% include "templates/doc-navbar.njk" %}

   <main class="doc-content" data-pagefind-body data-pagefind-filter="Sección:{{menu.title}}">
      <header class="doc-header">
         <h1>{{ title }}</h1>
         {{ description | md | safe }}

         {% include "templates/toc.njk" %}
      </header>

      <div class="doc-body">
         {{ content | safe }}
      </div>

      <footer class="doc-footer">
         <ul class="doc-pagination">
            {%- set previousPost = search.previousPage(url, "url^=/docs/", "section_order order title") %}
            {%- if previousPost %}
               <li class="is-prev">
                  <a href="{{ previousPost.url }}" rel="prev">
            ← Anterior 
            <strong>{{ previousPost.title }}</strong>
                  </a>
               </li>
            {% endif %}

            {%- set nextPost = search.nextPage(url, "url^=/docs/", "section_order order title") %}
            {%- if nextPost %}
               <li class="is-next">
                  <a href="{{ nextPost.url }}" rel="next">
            Seguinte → 
            <strong>{{ nextPost.title }}</strong>
                  </a>
               </li>
            {% endif %}
         </ul>
      </footer>
   </main>
</div>