---
layout: layouts/base.njk
bodyClass: body-default
page_css: blog.css
---
<header class="page-header">
   <h1 class="page-title">{{ title }}</h1>

   <aside>
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="3" cy="13" r="2" fill="currentColor"/><path d="M14 13C14 6.925 9.075 2 3 2M9 13a6 6 0 0 0-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg> RSS:
    <a href="/blog/feed.rss">Atom</a>, <a href="/blog/feed.json">JSON</a>
   </aside>

   {# {% if pagination.page == 1 %}
      <div class="search" id="search"></div>
   {% endif %} #}
</header>

{% if pagination.page == 1 %}
   <nav class="page-navigation">
      <h2>Etiquetas:</h2>

      <ul class="page-navigation-tags">
         {% for page in search.pages("type=tag", "tag") %}
            <li>
               <a href="{{ page.url }}" class="tag">{{ page.tag }}</a>
            </li>
         {% endfor %}
      </ul>
   </nav>
{% endif %}

{% set postslist = results %}
{% include "templates/post-list.njk" %}

{% if pagination.totalPages != 1 %}
   <nav class="page-pagination">
      <ul>
         {%- if pagination.previous %}
            <li>
               <a href="{{ pagination.previous }}" rel="prev">← Anterior</a>
            </li>
         {% endif %}

         <li>
      Páxina {{ pagination.page }}
         </li>

         {%- if pagination.next %}
            <li>
               <a href="{{ pagination.next }}" rel="next">Seguinte →</a>
            </li>
         {% endif %}
      </ul>
   </nav>
{% endif %}